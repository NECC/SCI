// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workshop {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  capacity    Int
  speakers    String
  type        String
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String @unique
  role     String @default("user")
  points   Int    @default(0)
}
